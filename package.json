{
  "name": "knockoff-kitchen",
  "version": "1.0.0",
  "description": "Recipe website powered by MongoDB",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "npm run build:css",
    "build:css": "tailwindcss -i ./public/css/input.css -o ./public/css/style.css --minify",
    "watch:css": "tailwindcss -i ./public/css/input.css -o ./public/css/style.css --watch"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-sitemap": "^1.8.0",
    "helmet": "^7.1.0",
    "marked": "^11.1.1",
    "mongoose": "^8.0.3",
    "slugify": "^1.6.6"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "tailwindcss": "^3.4.17"
  },
  "keywords": [
    "recipes",
    "copycat",
    "food",
    "cooking"
  ],
  "author": "Your Name",
